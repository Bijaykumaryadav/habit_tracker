<!-- entry_page.ejs -->
<link rel="stylesheet" href="/css/users_profile.css" />
<body>
  <div id="center-all">
    <div id="view-form">
      <% if(locals.user){ %>
      <form action="/users/track-habit" method="POST" id="track-habit-form">
        <div class="select-form">
          <label for="diet">Diet</label>
          <select name="diet" id="diet">
            <option value="done">Done</option>
            <option value="not done">Not Done</option>
            <option value="none">None</option>
          </select>
        </div>

        <div class="select-form">
          <label for="walk">Walk</label>
          <select name="walk" id="walk">
            <option value="done">Done</option>
            <option value="not done">Not Done</option>
            <option value="none">None</option>
          </select>
        </div>

        <div class="select-form">
          <label for="book">Book</label>
          <select name="book" id="book">
            <option value="done">Done</option>
            <option value="not done">Not Done</option>
            <option value="none">None</option>
          </select>
        </div>

        <div class="select-form">
          <label for="coding">Coding</label>
          <select name="coding" id="coding">
            <option value="done">Done</option>
            <option value="not done">Not Done</option>
            <option value="none">None</option>
          </select>
        </div>
        <div class="select-form">
          <label for="homework">Home Work</label>
          <select name="homework" id="homework">
            <option value="done">Done</option>
            <option value="not done">Not Done</option>
            <option value="none">None</option>
          </select>
        </div>

        <div class="select-form">
          <label for="skincare">Skincare</label>
          <select name="skincare" id="skincare">
            <option value="done">Done</option>
            <option value="not done">Not Done</option>
            <option value="none">None</option>
          </select>
        </div>
        <button type="submit" id="submit-btn">Track Habit</button>
      </form>
      <% } %>
      <a href="/users/reset_password">Reset Password</a>
      <a href="/users/logout">Sign out</a>
    </div>
  </div>
</body>
